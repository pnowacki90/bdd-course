<h3 class="text-center">Adding New Article</h3>
<div class="row">
  <div class="col-md-12"
    <%= form_with url: articles_path do |form| %>
    <div class="form-group">
      <div class="control-label col-md-1">
        <%= form.label :title %><br />
      </div>
      <div class="col-md-11">
        <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-1">
        <%= form.label :body %><br />
      </div>
      <div class="col-md-11">
        <%= form.text_area :body, rows: 10, class: "form-horizontal", placeholder: "Body of article" %>
      </div>
      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= form.submit class: "btn btn-primary btn-lg pull-right" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
