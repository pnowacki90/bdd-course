<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |error| %>
    <div class="row">
      <div class="alert alert-danger alert-dismissible col-md-10 col-md-offset-1" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Error!</strong> <%= error %>
      </div>
    </div>
  <% end %>
<% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article, :html => { class: "form-horizontal", role: "form" } ) do |form| %>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= form.label :title %>
        </div>
        <div class="col-md-11">
          <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <br />
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= form.label :body %>
        </div>
        <div class="col-md-11">
          <%= form.text_area :body, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
        <div class="form-group">
          <div class="col-md-offset-1 col-md-11">
            <%= form.submit class: "btn btn-primary btn-lg pull-right" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
